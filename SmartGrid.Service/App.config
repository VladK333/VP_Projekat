<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
	</startup>
	<system.serviceModel>
		<services>
			<!-- 2. Zadatak: WCF servis, konfiguracija i ugovori -> netTcpBinding-hostovanje -->
			<!-- Nas WCF servis -->
			<service name="SmartGrid.Service.SmartGridService">
				<host>
					<baseAddresses>
						<add baseAddress="net.tcp://localhost:4000/" />
					</baseAddresses>
				</host>

				<!-- Endpoint servisa -->
				<endpoint
				  address="SmartGridService"
				  binding="netTcpBinding"
				  bindingConfiguration="tcpConfig"
				  contract="SmartGrid.Common.ISmartGridService" />
			</service>
		</services>

		<!-- Binding konfiguracija -->
		<bindings>
			<netTcpBinding>
				<binding name="tcpConfig"
						 transferMode="Streamed"
						 maxReceivedMessageSize="10485760"
						 openTimeout="00:01:00"
						 closeTimeout="00:01:00"
						 receiveTimeout="00:10:00"
						 sendTimeout="00:01:00" />
			</netTcpBinding>
		</bindings>
	</system.serviceModel>

	<!-- 8. zadatak: pragovi -->
	<appSettings>
		<add key="F_threshold" value="50.0" />
		<add key="FFT_threshold" value="0.9" />
	</appSettings>
</configuration>
